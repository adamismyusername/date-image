<!DOCTYPE html>
<html>
<head>
    <title>Date Image</title>
    <style>
        body, html { margin: 0; padding: 0; }
        #dateCanvas { display: block; }
    </style>
</head>
<body>
    <canvas id="dateCanvas" width="300" height="60"></canvas>
    <script>
        function renderDate() {
            const canvas = document.getElementById('dateCanvas');
            const ctx = canvas.getContext('2d');
            const now = new Date();
            const dateString = now.toLocaleDateString('en-US', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            
            // Clear canvas
            ctx.fillStyle = 'white';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Draw date text
            ctx.fillStyle = 'black';
            ctx.font = '18px Arial';
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            ctx.fillText(dateString, canvas.width/2, canvas.height/2);
        }
        
        // Draw date immediately
        renderDate();
    </script>
</body>
</html>
